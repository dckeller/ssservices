<div class="edit-user-form">
<h2>Account Update Page</h2>
<h4>Would you like to make any changes to your account?</h4>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :bus_name, "Bussiness Name" %><br />
    <%= f.text_field :bus_name, autofocus: true, autocomplete: "bus_name" %>
  </div>

  <div class="field">
    <%= f.label :bus_location, "Business Location" %><br />
    <%= f.text_field :bus_location, autofocus: true, autocomplete: "bus_location" %>
  </div>

  <div class="field">
    <%= f.label :bus_type, "Business Type" %><br />
    <%= f.text_field :bus_type, autofocus: true, autocomplete: "bus_type" %>
  </div>

  <div class="field">
    <%= f.label :first_name , "First Name" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :avatar, "Attach Business Logo" %><br />
    <%= f.file_field :avatar, as: :file %>
  </div>

  <div class="field">
    <%= f.label :background, "Attach Profile Background" %><br />
    <%= f.file_field :background, as: :file %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :facebook, "Link Your Facebook Page" %><br />
    <%= f.text_field :facebook, autofocus: true, autocomplete: "facebook" %>
  </div>

  <div class="field">
    <%= f.label :linkedin, "Link Your Linkedin Page" %><br />
    <%= f.text_field :linkedin, autofocus: true, autocomplete: "linkedin" %>
  </div>

  <div class="field">
    <%= f.label :website, "Link Your Business Page" %><br />
    <%= f.text_field :website, autofocus: true, autocomplete: "website" %>
  </div>

  <div class="field">
    <%= f.label :description, "Tell a little about yourself" %><br />
    <%= f.text_area :description, autofocus: true, size: "60x10", autocomplete: "description" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Account" %>
  </div>
<% end %>
</div>