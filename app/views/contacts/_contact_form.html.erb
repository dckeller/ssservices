<%= bootstrap_form_for @contact, class: 'contact_form', remote: true do |f| %>
  <%= f.text_field :name, required: true, placeholder: "Tell me your name", class: 'contact_text' %>

  <%= f.email_field :email, required: true, placeholder: "Tell me your email" %>

  <%= f.text_area :message, as: :text, placeholder: "Tell me something" %>

  <%= f.hidden_field :nickname, hint: 'leave this field blank' %>

  <%= f.submit 'Send Message', class: 'btn btn-default btn-lg' %>
<% end %><br>
<div id="flash-message">
  <%= render 'contacts/flash' %>
</div>